<div class='mt-4'>
    <div>
        <a href="/me/stored/courses">Quay lại</a>
        <h3>Khóa học đã xóa </h3>
    </div>
    <table class='table'>
        <thead>
            <tr>
                <th scope='col'>#</th>
                <th scope='col'>Tên khóa học</th>
                <th scope='col'>Trình độ</th>
                <th scope='col'>Thời gian tạo</th>
                <th scope='col'>Thao tác </th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th scope='row'>{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.level}}</td>
                <td>{{this.createdAt}}</td>
                <td>
                    <a href='' class='btn btn-link btn-restore' data-toggle='modal' data-target='#restore-course-modal'
                        data-id={{this._id}}>Khôi phục</a>
                    <a href='' class='btn btn-link btn-remove' data-toggle='modal' data-target='#delete-course-modal'
                        data-id={{this._id}}>Xóa vĩnh viễn
                    </a>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="5" class="text-center">
                    Thùng rác trống.

                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{! Confirm restore course }}
<div id='restore-course-modal' class='modal' tabindex='-1' role='dialog'>
    <div class='modal-dialog' role='document'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h5 class='modal-title'>Khôi phục khóa học ?</h5>
                <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
                    <span aria-hidden='true'>&times;</span>
                </button>
            </div>
            <div class='modal-body'>
                <p>Bạn chắc chắn muốn khôi phục khóa học này?</p>
            </div>
            <div class='modal-footer'>
                <button type='button' class='btn btn-secondary' data-dismiss='modal'>Hủy</button>
                <button id='btn-restore-course' type='button' class='btn btn-secondary'>Khôi phục</button>

            </div>
        </div>
    </div>
</div>
{{! Confirm delete course }}
<div id='delete-course-modal' class='modal' tabindex='-1' role='dialog'>
    <div class='modal-dialog' role='document'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h5 class='modal-title'>Xóa khóa học ?</h5>
                <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
                    <span aria-hidden='true'>&times;</span>
                </button>
            </div>
            <div class='modal-body'>
                <p>Bạn chắc chắn muốn xóa vĩnh viễn khóa học này?</p>
            </div>
            <div class='modal-footer'>
                <button type='button' class='btn btn-secondary' data-dismiss='modal'>Hủy</button>
                <button id='btn-delete-course' type='button' class='btn btn-danger'>Xóa
                    bỏ</button>

            </div>
        </div>
    </div>
</div>

{{! Restore hidden form }}
<form name='restore-course-form' method='POST'></form>
{{! Delete hidden form }}
<form name='delete-course-form' method='POST'></form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        let courseID;
        const deleteForm = document.forms['delete-course-form'];
        const restoreForm = document.forms['restore-course-form'];
        const btnDeleteCourse = document.getElementById('btn-delete-course');
        const btnRestoreCourse = document.getElementById('btn-restore-course');

        //When dialog delete confirm clicked
        $('#delete-course-modal').on('show.bs.modal', function (event) {
            const button = $(event.relatedTarget);
            courseID = button.data('id');
        });

        //When delete course btn delete
        btnDeleteCourse.onclick = function () {
            if (courseID) {
                deleteForm.action = `/courses/${courseID}/force?_method=DELETE`;
                deleteForm.submit();
            }
        };
        //When dialog restore confirm clicked
        $('#restore-course-modal').on('show.bs.modal', function (event) {
            const button = $(event.relatedTarget);
            courseID = button.data('id');
        });

        //When restore course btn delete
        btnRestoreCourse.onclick = function () {
            if (courseID) {
                restoreForm.action = `/courses/${courseID}/restore?_method=PATCH`;
                restoreForm.submit();
            }
        };
    });
</script>